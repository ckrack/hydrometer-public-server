{% extends 'base.html.twig' %}

{% block title %}Hello AddHydrometerController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>New hydrometer added âœ…</h1>

        Your hydrometer token is: {{ hydrometer_id }}<br>
        <a href="{{ path('app_show_data', {hydrometerId: hydrometer_id}) }}">Show it's data</a>
    </div>

    <div class="example-wrapper">
        <dl>
            <dt>{% trans %}Service type{% endtrans %}</dt>
            <dd>{% trans %}TCP{% endtrans %}</dd>

            <dt>{% trans %}Token{% endtrans %}</dt>
            <dd>{{ hydrometer_id }}</dd>

            <dt>{% trans %}Server address{% endtrans %}</dt>
            <dd>{{ app.request.getHttpHost() }}</dd>

            <dt>{% trans %}Server port{% endtrans %}</dt>
            <dd>{{ app.request.server.get('TCP_API_PORT') }}</dd>
        </dl>
    </div>
{% endblock %}
