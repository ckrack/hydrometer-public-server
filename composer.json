{
    "name": "ckrack/ispindel-ui",
    "description": "A backend with corresponding UI for the ispindle project",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "slim3",
        "boilerplate",
        "quickstart",
        "framework",
        "ispindle",
        "ispindel",
        "craftbeer",
        "hydrometer"
    ],
    "authors": [
        {
            "name": "Clemens Krack",
            "email": "info@clemenskrack.com",
            "homepage": "https://www.clemenskrack.com",
            "role": "Developer"
        }
    ],
    "require": {
        "slim/slim": "^3.7",
        "monolog/monolog": "^1.22",
        "projek-xyz/slim-plates": "^0.2.2",
        "vlucas/phpdotenv": "^2.4",
        "doctrine/orm": "^2.5",
        "hashids/hashids": "^1.0",
        "zircote/swagger-php": "^2.0",
        "cocur/slugify": "^2.1",
        "beberlei/DoctrineExtensions": "^1.0",
        "ckrack/slim-league-container-bridge": "^3.1",
        "gedmo/doctrine-extensions": "^2.4",
        "robmorgan/phinx": "^0.8.1",
        "jenssegers/optimus": "^0.2.3",
        "phpseclib/phpseclib": "^2.0",
        "phpmailer/phpmailer": "^5.2",
        "jenssegers/date": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8080 -t public/",
        "post-create-project-cmd": [
            "php -r \"copy('src/example.env', 'src/.env');\""
        ]
    }
}
