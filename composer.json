{
    "name": "ckrack/hydrometer-public-server",
    "version": "1.0.0",
    "description": "Public server for electronic hydrometers for homebrewing",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "slim3",
        "boilerplate",
        "quickstart",
        "framework",
        "ispindle",
        "ispindel",
        "craftbeer",
        "hydrometer",
        "tilt hydrometer",
        "tilthydrometer"
    ],
    "authors": [
        {
            "name": "Clemens Krack",
            "email": "info@clemenskrack.com",
            "homepage": "https://www.clemenskrack.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "beberlei/DoctrineExtensions": "^1.0",
        "gedmo/doctrine-extensions": "^2.4",
        "jenssegers/optimus": "^0.2.3",
        "phpseclib/phpseclib": "^2.0",
        "league/oauth2-google": "^2.0",
        "league/oauth2-facebook": "^2.0",
        "sensio/framework-extra-bundle": "^5.1",
        "symfony/orm-pack": "^1.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/monolog-bundle": "^3.2",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/form": "^4.0",
        "symfony/security-bundle": "^4.0",
        "symfony/translation": "^4.1",
        "symfony/validator": "^4.0",
        "stof/doctrine-extensions-bundle": "^1.3",
        "sensiolabs/security-checker": "^5.0",
        "jenssegers/date": "^3.3",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/httplug-bundle": "^1.9",
        "symfony/templating": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/webpack-encore-pack": "^1.0",
        "knpuniversity/oauth2-client-bundle": "^1.20"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/maker-bundle": "^1.2",
        "symfony/debug-pack": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-create-project-cmd": [
            "php -r \"copy('src/example.env', 'src/.env');\""
        ],
        "spark": "php vendor/bin/optimus spark && php -r \" echo('Please update these numbers in ./src/.env under # OPTIMUS');\"",
        "setup-db": "php bin/console doctrine:migrations:migrate",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    }
}
