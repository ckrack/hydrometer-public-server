{
    "name": "ckrack/hydrometer-public-server",
    "version": "0.1.1",
    "description": "Public server for electronic hydrometers for homebrewing",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "slim3",
        "boilerplate",
        "quickstart",
        "framework",
        "ispindle",
        "ispindel",
        "craftbeer",
        "hydrometer",
        "tilt hydrometer",
        "tilthydrometer"
    ],
    "authors": [
        {
            "name": "Clemens Krack",
            "email": "info@clemenskrack.com",
            "homepage": "https://www.clemenskrack.com",
            "role": "Developer"
        },
        {
            "name": "Stefan Schreiber",
            "email": "stephan@sschreiber.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "slim/slim": "^3.7",
        "monolog/monolog": "^1.22",
        "projek-xyz/slim-plates": "^0.2.2",
        "vlucas/phpdotenv": "^2.4",
        "doctrine/orm": "^2.5",
        "hashids/hashids": "^1.0",
        "zircote/swagger-php": "^2.0",
        "cocur/slugify": "^2.1",
        "beberlei/DoctrineExtensions": "^1.0",
        "ckrack/slim-league-container-bridge": "^3.1",
        "gedmo/doctrine-extensions": "^2.4",
        "jenssegers/optimus": "^0.2.3",
        "phpseclib/phpseclib": "^2.0",
        "phpmailer/phpmailer": "^5.2",
        "jenssegers/date": "^3.2",
        "adamwathan/bootforms": "^0.8.5",
        "vlucas/valitron": "^1.4",
        "dflydev/fig-cookies": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8080 -t public/",
        "post-create-project-cmd": [
            "php -r \"copy('src/example.env', 'src/.env');\""
        ],
        "spark": "php vendor/bin/optimus spark && php -r \" echo('Please update these numbers in ./src/.env under # OPTIMUS');\"",
        "setup-db": "php vendor/bin/doctrine orm:schema-tool:update -f && php vendor/bin/doctrine orm:generate-proxies"
    }
}
